<%- include("header.ejs") %>
<h1>Members list</h1>
<form action="/api/members" method="POST">
    <input type="text" name="name" placeholder="Name" />
    <input type="email" name="email" placeholder="Email" />
  <button type="submit">POST</button>
</form>
<table class="table">
  <thead class="thead">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody class="tbody">
    <% members.forEach(member => { %>
        <tr>
          <td><a href="/api/members/<%= member.id %>"><%= member.id %></a></td>
          <td><%= member.name %></td>
          <td><%= member.email %></td>
        </tr>
    <% }) %>
  </tbody>
</table>